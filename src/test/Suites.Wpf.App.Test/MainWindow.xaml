<Window x:Class="Suites.Wpf.App.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Suites.Wpf.App.Test"
        xmlns:swa="http://suites.com/"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
      <RowDefinition Height="50" />
    </Grid.RowDefinitions>
    <swa:Clock FontSize="25" />
    <swa:SimplePie Grid.Row="1"
                   Source="{Binding Classes}" />
    <Button Content="点击我试试看!"
            Command="{Binding AddA}"
            Grid.Row="2"
            MaxWidth="100"
            MaxHeight="50" />
  </Grid>
</Window>
